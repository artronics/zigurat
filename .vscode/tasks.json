{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },{
            "label": "run-hello",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig build run-hello",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run main tests",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig test -femit-bin=${workspaceFolder}/zig-out/main-test ${workspaceFolder}/src/main.zig",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        },{
            "label": "run graphics tests",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig test -femit-bin=${workspaceFolder}/zig-out/graphics-test ${workspaceFolder}/src/graphics.zig",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        }
    ]
}